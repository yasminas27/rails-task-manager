<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :details %>
          <%= f.text_field :details, class: 'form-control details-input' %>
        </div>

        <%= f.submit class: 'btn btn-primary btn-create' %>
      <% end %>
    </div>
  </div>
</div>
