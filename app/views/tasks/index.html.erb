<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-offset-4">
      <h1> This is a list of all your tasks:</h1>
      <ul>
      <% @tasks.each do |task| %>
      <li> <strong> <%= link_to(task.title.capitalize, task_path(task)) %> </strong>
      <%= link_to"(Edit)", edit_path(task) %>
      <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
      <% end %>
      </li>
      </ul>
      <%= link_to'Add a new task', new_path %>
    </div>
  </div>
</div>

